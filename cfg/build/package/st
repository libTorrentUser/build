#!/bin/sh

. ../script/lib.sh



PackageBuildDependencies()
{
	printf '
make
libxft
pkgconf
';

}


PackageRuntimeDependencies()
{
	return 0;
}


PackageBuild()
{
	local buildDir="$1";
	local prefix="$2";
	local destDir="$3";
	#local npp="$4";
	local dirBin="$5";

	local package='st';

	local sourceDir;	
	sourceDir=$(./latest.sh \
		--url='https://dl.suckless.org/st' \
		--package="${package}" \
		-b="$buildDir");
	
	if [ $? -ne 0  ] || [ -z "$sourceDir" ]; then
		Die "unable to retrieve the latest version tar";
	fi
	
	DieIfFails ./make.sh \
		-b="$buildDir" \
		-s="$sourceDir" \
		--in-source \
		--no-configure \
		--dest-dir="$destDir";
}
