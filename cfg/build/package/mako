#!/bin/sh

. ../script/lib.sh



PackageBuildDependencies()
{
	printf 'python';
}


PackageRuntimeDependencies()
{
	return 0;
}


PackageBuild()
{
	local buildDir="$1";
	local prefix="$2";
	local destDir="$3";
	local npp="$4";
	local dirBin="$5";

	local package='mako';

	local sourceDir;	
	sourceDir=$(./latest.sh \
		--host='github' \
		--github-regex='tarball_url.*' \
		--package="sqlalchemy/${package}" \
		-b="$buildDir");
	
	if [ $? -ne 0  ] || [ -z "$sourceDir" ]; then
		Die "unable to retrieve the latest version tar";
	fi

	DieIfFails cd "$sourceDir";

	LogErr 'building...'
	DieIfFails python setup.py build \
		-j $npp;
		
	LogErr 'installing...'
	DieIfFails python setup.py install \
		--prefix=$prefix \
		--optimize=2 \
		--root="$destDir"
}
