#!/bin/sh

. ../script/lib.sh

. ../script/postbuild-python.sh



PackageBuildDependencies()
{
	printf 'python-pip';
}


PackageRuntimeDependencies()
{
	return 0;
}


PackageBuild()
{
	local buildDir="$1";
	local prefix="$2";
	local destDir="$3";
	local npp="$4";
	local dirBin="$5";

	local package='python-pygments';

	printenv | sort;

	local sourceDir;	
	sourceDir=$(./latest.sh \
		--host='pypi' \
		--package="pygments" \
		-b="$buildDir");
	
	if [ $? -ne 0  ] || [ -z "$sourceDir" ]; then
		Die "unable to retrieve the latest version tar";
	fi

	LogErr 'building...'
	DieIfFails python -OO -m pip install \
		--no-cache-dir \
		--no-deps \
		--prefix="$prefix" \
		--root="$destDir" \
		"$sourceDir";
}


PackagePostBuild()
{	
	local prefix="$1";
	#local destDir="$2";
	#local binDir="$3";
	local envVarsFile="$4";
	local rootDir="$5";

	PostBuildPython \
		"$prefix" \
		"$rootDir" \
		"$envVarsFile";
}
