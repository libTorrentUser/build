#!/bin/sh

. ../script/lib.sh



PackageBuildDependencies()
{
	printf '
alsa-lib
cairo
eudev
gtksourceview3
libao
libxrandr
libxv
make
openal-soft
sdl
';

}


PackageRuntimeDependencies()
{
	return 0;
}


PackageBuild()
{
	local buildDir="$1";
	local prefix="$2";
	local destDir="$3";
	#local npp="$4";
	local dirBin="$5";

	local package='bsnes';

	local sourceDir;	
	sourceDir=$(./latest.sh \
		--host='github' \
		--package="bsnes-emu/${package}" \
		-b="$buildDir");
	
	if [ $? -ne 0  ] || [ -z "$sourceDir" ]; then
		Die "unable to retrieve the latest version tar";
	fi
	
	DieIfFails ./patch.sh "$package" "$sourceDir";


	# NOTE: set lto=false in the build-options below in  case you are forcing a 
	# build without optimizations otherwise the build is likely to fail during 
	# the linking step.
	DieIfFails ./make.sh \
		-b="$buildDir" \
		-s="$sourceDir" \
		--in-source \
		--no-configure \
		--no-install \
		--build-options="
			-C bsnes \
			build=performance \
			hiro=gtk3 \
			local=true \
			lto=true \
		";

	LogErr 'installing...'
	local destDirBin="${destDir}${prefix}/bin";
	DieIfFails mkdir -p "$destDirBin";
	DieIfFails cp "${sourceDir}/bsnes/out/bsnes" "${destDirBin}/"
}
