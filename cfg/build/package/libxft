#!/bin/sh

source script.lib.sh

source ../script/build-xorg-lib.sh


PackageBuildDependencies()
{
	printf '
fontconfig
freetype2
make
xrender
';

}


PackageRuntimeDependencies()
{
	return 0;
}


PackageBuild()
{
	local buildDir="$1";
	local prefix="$2";
	local destDir="$3";
	local npp="$4";
	local dirBin="$5";
	local dirRoot="$6";
	
	BuildXOrgLib \
		'libXft' \
		"$buildDir" \
		"$prefix" \
		"$destDir" \
		"$npp" \
		"$dirBin" \
		"$dirRoot";
}
