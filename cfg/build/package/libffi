#!/bin/sh

source script.lib.sh



PackageBuildDependencies()
{
	printf '
linux-headers
make
';
}


PackageRuntimeDependencies()
{
	return 0;
}


PackageBuild()
{
	local buildDir="$1";
	local prefix="$2";
	local destDir="$3";
	#local npp="$4";
	local dirBin="$5";
	local dirRoot="$6";

	local package='libffi';

	local sourceDir=;
	sourceDir=$(./latest.sh \
		-b="$buildDir" \
		--host="github" \
		--package="${package}/${package}"
		);

	if [ $? -ne 0  ] || [ -z "$sourceDir" ]; then
		Die "unable to download the latest version tar";
	fi
		
	DieIfFails ./make.sh \
		-b="$buildDir" \
		-s="$sourceDir" \
		--configure-options="\
			--prefix=$prefix \
			--disable-docs \
			--disable-debug \
			--disable-maintainer-mode \
			--disable-portable-binary \
			" \
		--dest-dir="$destDir" \
		--install-options="install-strip";

	local pkgconfigDir="$dirBin/pkgconfig";

	DieIfFails ./adjust-pkgconfig.sh \
		-p="$package" \
		-d="$destDir" \
		--prefix="$prefix" \
		-o="$pkgconfigDir" \
		-r="$dirRoot";

}
