#!/bin/sh

. ../script/lib.sh



PackageBuildDependencies()
{
	printf '
autoconf
automake
glib
gtk+3-no.dbus
make
';
}


PackageRuntimeDependencies()
{
	return 0;
}


PackageWarnings()
{
	return 0;
}


PackageBuild()
{
	local buildDir="$1";
	local prefix="$2";
	local destDir="$3";
	#local npp="$4";
	local dirBin="$5";
	local dirRoot="$6";
	
	local package='gtksourceview3';

	local sourceDir;
	sourceDir=$(./latest.sh \
		--package="gtksourceview" \
		--host='gnome' \
		--version-major='3' \
		--gnome-ignore9x \
		-b="$buildDir"
		);

	if [ $? -ne 0  ] || [ -z "$sourceDir" ]; then
		Die "unable to retrieve the latest version tar";
	fi


	(
		DieIfFails cd "$sourceDir";

		# hack to avoid having to install gtk-doc just to be able to call
		# autoreconf
		GTKDOCIZE=echo \
		DieIfFails autoreconf -fi;
	);

	if [ $? -ne 0  ]; then
		Die "call to autoreconf failed!";
	fi


	DieIfFails ./patch.sh "$package" "$sourceDir";

	
	DieIfFails ./make.sh \
		-b="$buildDir" \
		-s="$sourceDir" \
		--in-source \
		--configure-options="\
			--prefix=$prefix \
			--disable-glade-catalog \
			--disable-gtk-doc \
			--disable-installed-tests \
			--disable-instrospection \
			--disable-valgrind \
			" \
		--dest-dir="$destDir" \
		--install-options="install-strip";


	DieIfFails ./adjust-pkgconfig.sh \
		-d="$destDir" \
		--prefix="$prefix" \
		-o="$dirBin/pkgconfig" \
		-r="$dirRoot";

}
