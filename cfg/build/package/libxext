#!/bin/sh

. ../script/lib.sh

. ../script/build-xorg-lib.sh


PackageBuildDependencies()
{
	printf "\
libx11
make
pkgconf
xproto
";

}


PackageRuntimeDependencies()
{
	return 0;
}


PackageBuild()
{
	local buildDir="$1";
	local prefix="$2";
	local destDir="$3";
	local npp="$4";
	local dirBin="$5";
	local dirRoot="$6";
	
	BuildXOrgLib \
		'libXext' \
		"$buildDir" \
		"$prefix" \
		"$destDir" \
		"$npp" \
		"$dirBin" \
		"$dirRoot";
}
