#!/bin/sh

. ../script/lib.sh



PackageBuildDependencies()
{
	printf '
make
';
}


PackageRuntimeDependencies()
{
	return 0;
}


PackageWarnings()
{
	return 0;
}


PackageBuild()
{
	local buildDir="$1";
	local prefix="$2";
	local destDir="$3";
	#local npp="$4";
	local dirBin="$5";
	
	local package='rsync';

	local sourceDir;
	sourceDir=$(./latest.sh \
		--package="${package}-[0-9]\+" \
		--url='https://download.samba.org/pub/rsync/src/' \
		-b="$buildDir"
		);

	if [ -z "$sourceDir" ]; then
		Die 'Unable to retrieve the latest source code';
	fi
	
	DieIfFails ./make.sh \
		-b="$buildDir" \
		-s="$sourceDir" \
		--configure-options="\
			--prefix=$prefix \
			--disable-debug \
			--disable-lz4 \
			--disable-md2man
			--disable-openssl \
			--disable-profile \
			--disable-xxhash \
			--disable-zstd \
			--enable-roll-simd \
			--enable-md5-asm \
			--enable-roll-asm \
			" \
		--dest-dir="$destDir" \
		--install-options="install-strip";
}
