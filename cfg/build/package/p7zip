#!/bin/sh

source script.lib.sh



PackageBuildDependencies()
{
	printf '
make
';
}


PackageRuntimeDependencies()
{
	return 0;
}


PackageWarnings()
{
	return 0;
}


PackageBuild()
{
	local buildDir="$1";
	local prefix="$2";
	local destDir="$3";
	#local npp="$4";
	local dirBin="$5";
	
	local package='p7zip';


	local sourceDir;
	sourceDir=$(./latest.sh \
		--host='github' \
		--package="p7zip-project/${package}" \
		-b="$buildDir"
		);

	if [ $? -ne 0 ] || [ -z "$sourceDir" ]; then
		Die "unable to retrieve the latest version tarball";
	fi
	
	DieIfFails ./make.sh \
		-b="$buildDir" \
		-s="$sourceDir" \
		--no-configure \
		--in-source \
		--cmd-build='make all3' \
		--dest-dir="$destDir" \
		--install-options="install DEST_HOME=${destDir}/${prefix}";
}
